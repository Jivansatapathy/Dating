# Our Memories Server - Environment Variables
# Copy this file to .env and fill in your values

# Server Configuration
NODE_ENV=production
PORT=3000
ALLOWED_ORIGINS=https://your-app-domain.com,https://your-app-domain.vercel.app

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/our-memories
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/our-memories

# AWS S3 Configuration (Optional - for backup storage)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
S3_BUCKET=your-backup-bucket

# Security (Optional - for request signing)
SIGNALING_SECRET=your-secret-key-for-request-signing
